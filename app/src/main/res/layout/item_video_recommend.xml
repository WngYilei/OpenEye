<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_video_recommend_img"
        android:layout_width="135dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_video_recommend_time"
        android:layout_width="35dp"
        android:layout_height="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_video_detail_time"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_video_recommend_img"
        app:layout_constraintEnd_toEndOf="@+id/item_video_recommend_img" />


    <TextView
        android:id="@+id/item_video_recommend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/item_video_recommend_img"
        app:layout_constraintTop_toTopOf="@+id/item_video_recommend_img" />

    <TextView
        android:id="@+id/item_video_recommend_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/item_video_recommend_img"
        app:layout_constraintTop_toBottomOf="@+id/item_video_recommend_title" />
</androidx.constraintlayout.widget.ConstraintLayout>